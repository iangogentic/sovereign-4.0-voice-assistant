# Jarvis-Pipecat Voice Assistant Environment Variables
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here_optional

# Kimi K2 Code Agent API
KIMI_API_KEY=your_kimi_k2_api_key_here
KIMI_API_URL=https://api.moonshot.cn/v1

# ElevenLabs TTS (Optional Alternative)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Alternative LLM Providers (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# Local Model Configuration
WHISPER_MODEL_PATH=./models/whisper/tiny.en.bin
PIPER_MODEL_PATH=./models/piper/en_US-lessac-medium.onnx
LLAMA_MODEL_PATH=./models/llama/gemma-2b-it-q4_0.gguf

# Database Configuration
CHROMA_PERSIST_DIR=./data/chroma
MEMORY_ENCRYPTION_KEY=your_encryption_key_here_optional

# Application Configuration
CONFIG_PATH=./config/config.yaml
LOG_LEVEL=INFO
LOG_FILE=./logs/jarvis.log

# Feature Flags
OFFLINE_MODE=false
DEBUG_MODE=false
TEST_MODE=false
MOCK_APIS=false

# Performance Tuning
MAX_WORKERS=4
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# Security Settings
VALIDATE_API_KEYS=true
REQUIRE_HTTPS=true
ALLOWED_HOSTS=localhost,127.0.0.1

# Development Settings
SKIP_AUDIO_INIT=false
USE_TEST_DATA=false
METRICS_PORT=8000

# GPU Configuration (Optional)
CUDA_VISIBLE_DEVICES=0
TORCH_DEVICE=auto

# Tesseract OCR Configuration
TESSERACT_PATH=/usr/local/bin/tesseract
TESSERACT_DATA_PATH=/usr/local/share/tessdata
